{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Frontend static files",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPattern=unit",
    "test:property": "NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPattern=property",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,ts,css,html}\""
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@types/node": "^20.11.5",
    "fast-check": "^3.15.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.3.3"
  }
}
